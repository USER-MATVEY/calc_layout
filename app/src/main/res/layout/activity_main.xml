<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="40dp"
        android:background="#D0E2A6"
        android:text="Hello World!"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:columnCount="6"
        android:rowCount="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:backgroundTint="#A52929"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="C"
            android:textSize="40sp"
            app:cornerRadius="15dp" />

        <Button
            style="@style/grey_number_button"
            android:layout_row="0"
            android:layout_column="1"
            android:text="1"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            style="@style/grey_number_button"
            android:layout_row="0"
            android:layout_column="2"
            android:text="2"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:backgroundTint="#73635A"
            android:text="+/-"
            android:textSize="30sp"
            app:cornerRadius="15dp"
            />

        <Button
            style="@style/grey_number_button"
            android:layout_row="1"
            android:layout_column="1"
            android:text="3"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            style="@style/grey_number_button"
            android:layout_row="1"
            android:layout_column="2"
            android:text="4"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            style="@style/operation_button"
            android:layout_row="2"
            android:layout_column="0"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="sq" />

        <Button
            style="@style/grey_number_button"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            style="@style/grey_number_button"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            style="@style/operation_button"
            android:layout_row="3"
            android:layout_column="0"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Xy" />

        <Button
            android:layout_row="3"
            android:layout_column="1"
            style="@style/grey_number_button"
            android:text="7"
            />

        <Button
            android:layout_row="3"
            android:layout_column="2"
            style="@style/grey_number_button"
            android:text="8"
            />

        <Button
            android:layout_column="0"
            android:layout_row="4"
            style="@style/operation_button"
            android:text="%"
            />

        <Button
            android:layout_row="4"
            android:layout_column="1"
            style="@style/grey_number_button"
            android:text="9"
            />

        <Button
            android:layout_row="4"
            android:layout_column="2"
            style="@style/grey_number_button"
            android:text="0"
            />

        <Button
            style="@style/operation_button"
            android:layout_row="5"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:text="+" />

        <Button
            android:layout_row="5"
            android:layout_column="1"
            style="@style/grey_number_button"
            android:text="("
            />

        <Button
            android:layout_row="5"
            android:layout_column="2"
            style="@style/grey_number_button"
            android:text=")"
            />

        <Button
            android:layout_row="6"
            android:layout_column="1"
            style="@style/operation_button"
            android:text="-"
            />

        <Button
            android:layout_row="6"
            android:layout_column="2"
            style="@style/operation_button"
            android:text="x"
            />

        <Button
            android:layout_row="6"
            android:layout_column="3"
            style="@style/operation_button"
            android:text="//"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:backgroundTint="#FF5900"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="="
            android:textSize="40sp"
            app:cornerRadius="15dp" />

        <GridLayout
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                style="@style/white_number_button"
                android:layout_row="0"
                android:layout_column="0"
                android:text="1"
                />
            <Button
                style="@style/white_number_button"
                android:layout_row="0"
                android:layout_column="1"
                android:text="2" />
            <Button
                style="@style/white_number_button"
                android:layout_row="0"
                android:layout_column="2"
                android:text="3" />

            <Button
                style="@style/white_number_button"
                android:layout_row="1"
                android:layout_column="0"
                android:text="4" />
            <Button
                style="@style/white_number_button"
                android:layout_row="1"
                android:layout_column="1"
                android:text="5" />
            <Button
                style="@style/white_number_button"
                android:layout_row="1"
                android:layout_column="2"
                android:text="6" />

            <Button
                style="@style/white_number_button"
                android:layout_row="2"
                android:layout_column="0"
                android:text="7"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                style="@style/white_number_button"
                android:layout_row="2"
                android:layout_column="1"
                android:text="8"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                style="@style/white_number_button"
                android:layout_row="2"
                android:layout_column="2"
                android:text="9"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                style="@style/white_number_button"
                android:layout_row="3"
                android:layout_column="0"
                android:text="0"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                style="@style/white_number_button"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:text="="
                tools:ignore="DuplicateSpeakableTextCheck" />
        </GridLayout>

        <GridLayout
            android:layout_row="3"
            android:layout_rowSpan="3"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                style="@style/white_number_button"
                android:layout_row="0"
                android:layout_column="0"
                android:text="1"
                />
            <Button
                style="@style/white_number_button"
                android:layout_row="0"
                android:layout_column="1"
                android:text="2" />
            <Button
                style="@style/white_number_button"
                android:layout_row="0"
                android:layout_column="2"
                android:text="3" />

            <Button
                style="@style/white_number_button"
                android:layout_row="1"
                android:layout_column="0"
                android:text="4" />
            <Button
                style="@style/white_number_button"
                android:layout_row="1"
                android:layout_column="1"
                android:text="5" />
            <Button
                style="@style/white_number_button"
                android:layout_row="1"
                android:layout_column="2"
                android:text="6" />

            <Button
                style="@style/white_number_button"
                android:layout_row="2"
                android:layout_column="0"
                android:text="7" />
            <Button
                style="@style/white_number_button"
                android:layout_row="2"
                android:layout_column="1"
                android:text="8" />
            <Button
                style="@style/white_number_button"
                android:layout_row="2"
                android:layout_column="2"
                android:text="9" />

            <Button
                style="@style/white_number_button"
                android:layout_row="3"
                android:layout_column="0"
                android:text="0" />
            <Button
                style="@style/white_number_button"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_column="1"
                android:text="=" />
        </GridLayout>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>