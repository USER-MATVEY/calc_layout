<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calc_layout" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Calc_layout" parent="Base.Theme.Calc_layout" />

    <style name="grey_number_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="backgroundTint">#54595C</item>
        <item name="android:textSize">40sp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    
    <style name="operation_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="backgroundTint">#DDDDDD</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">35sp</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="white_number_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_margin">2dp</item>
    </style>
</resources>